        </Grid>
        <Grid x:Name="Arrow" Height="39" Width="48" Margin="150,98,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/MinecraftCrafterList;component/Images/Crafting UI/Grid_layout_Furnace_Progress_(in-active).png"/>
            </Grid.Background>
        </Grid>
        <local:ItemSlot x:Name="Result" Height="61" Width="61" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="237,85,0,0"/>
