        <Border BorderThickness="0,2,0,0" BorderBrush="#FF373737" Background="#FF8B8B8B" Height="8" Width="22.5" Margin="166,126,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Border BorderThickness="0,0,0,2" BorderBrush="White" Height="8" Width="26" Margin="162,126,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
