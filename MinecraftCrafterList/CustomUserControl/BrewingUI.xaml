        <Border BorderThickness="0,2,0,0" BorderBrush="#FF373737" Width="20" Margin="109.5,126,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="2"/>
        <!--Centre Pipe-->
        <Border BorderThickness="0,0,2,0" BorderBrush="White" Background="#FF8B8B8B" Height="70.5" Width="8" Margin="144,75,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Border BorderThickness="2,0,0,0" BorderBrush="#FF373737"  Background="#FF8B8B8B" Height="70.5" Width="6" Margin="144,77,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
